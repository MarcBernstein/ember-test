<!-- app/templates/index.hbs -->
<div class="jumbotron text-center">
  <h1>Contact Us</h1>

  <br/><br/>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2 has-feedback {{if emailisValid 'has-success'}}">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      {{#if emailisValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2 has-feedback {{if messageIsValid 'has-success'}}">
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
      {{#if messageIsValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button class="btn btn-primary btn-lg btn-block" {{action 'sendMessage'}} disabled={{isDisabled}}>Send Message</button>
    </div>

  </div>

  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}


  <br/><br/>

</div>
