[user]
	name = Marc Bernstein
	email = github@marcanderica.org
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    co = checkout
	last = log -1 HEAD
	br = branch
	st = status
	ci = commit
    hide = update-index --assume-unchanged
    unhide = update-index --no-assume-unchanged
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
[color]
	ui = true
	diff = auto
	branch = auto
	status = auto
	interactive = true
	sh = auto
[help]
	autocorrect = 0
[push]
	default = tracking
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	pager = less
	autocrlf = input
